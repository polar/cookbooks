#!/bin/bash

cd <%= @options[:working_directory] %>

owner      = <%= @options[:owner] %>
group      = <%= @options[:group] %>
configfile = <%= @options[:conf_file] %>
appenv     = <%= @options[:app_environment] %>

# Command may be "unicorn_rails" for pre-rack rails, otherwise "unicorn".
unicorncmd = <%= @options[:unicorn_command] %>

exec 2>&1
exec chpst -u $owner:$group $unicorncmd -E $appenv -c $configfile

